@page "/managers"

<PageTitle>Managers</PageTitle>

<h1>Managers index</h1>

<br>
@if (managerList != null && managerList?.Count > 0)
{
// TODO: add collapsable components
// https://getbootstrap.com/docs/4.0/components/collapse/#accordion-example
// https://learn.microsoft.com/en-us/aspnet/core/blazor/components/virtualization?view=aspnetcore-8.0
    <div class="container">
        @foreach (var manager in managerList)
        {
            <div class="card" style="width:auto;">
                <div class="card-body">
                    <h5 class="card-title">@manager</h5>
                    <a href="managers/@manager.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No managers</p>
}


@code {

    private readonly List<User> managerList = Manager.LoadManagers();

}